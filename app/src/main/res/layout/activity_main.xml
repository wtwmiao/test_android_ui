<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huiti123.testchangeparentsize.MainActivity">


    <Button
        android:id="@+id/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="16dp"/>


    <com.example.huiti123.testchangeparentsize.MyParentLayoutView
        android:id="@+id/my_layout_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.example.huiti123.testchangeparentsize.MyParentLayoutView>


    <com.example.huiti123.testchangeparentsize.RangeSeekBar
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:background="@color/red"
        app:range="@color/colorAccent"
        app:thumb="@color/colorPrimary"
        app:track="@color/black"

        />

    <com.example.huiti123.testchangeparentsize.event_test.EventParentView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@color/black_50_opacity">

    </com.example.huiti123.testchangeparentsize.event_test.EventParentView>

</RelativeLayout>
